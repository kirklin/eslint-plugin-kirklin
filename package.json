{
  "name": "eslint-plugin-kirklin",
  "type": "module",
  "version": "1.5.0",
  "packageManager": "pnpm@10.2.1",
  "description": "Kirk Lin extended ESLint rules",
  "author": "Kirk Lin (https://github.com/kirklin)",
  "license": "MIT",
  "funding": "https://www.buymeacoffee.com/linkirk",
  "homepage": "https://github.com/kirklin/eslint-plugin-kirklin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirklin/eslint-plugin-kirklin.git"
  },
  "bugs": "https://github.com/kirklin/eslint-plugin-kirklin/issues",
  "keywords": [
    "eslint-plugin"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "pnpm run dev && eslint .",
    "lint:fix": "pnpm run dev && eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "devDependencies": {
    "@antfu/ni": "^23.3.1",
    "@antfu/utils": "^8.1.0",
    "@kirklin/eslint-config": "^2.8.0",
    "@types/eslint": "^9.6.1",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^22.13.1",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/typescript-estree": "^8.23.0",
    "@typescript-eslint/utils": "^8.23.0",
    "bumpp": "^10.0.2",
    "eslint": "^9.20.0",
    "eslint-define-config": "^2.1.0",
    "eslint-vitest-rule-tester": "^1.1.0",
    "esno": "^4.8.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.4.3",
    "lodash.merge": "4.6.2",
    "pnpm": "^10.2.1",
    "semver": "^7.7.1",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "resolutions": {
    "eslint-plugin-kirklin": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
