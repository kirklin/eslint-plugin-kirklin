{
  "name": "eslint-plugin-kirklin",
  "type": "module",
  "version": "3.0.1",
  "packageManager": "pnpm@10.28.1",
  "description": "Kirk Lin extended ESLint rules",
  "author": "Kirk Lin (https://github.com/kirklin)",
  "license": "MIT",
  "funding": "https://www.buymeacoffee.com/linkirk",
  "homepage": "https://github.com/kirklin/eslint-plugin-kirklin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirklin/eslint-plugin-kirklin.git"
  },
  "bugs": "https://github.com/kirklin/eslint-plugin-kirklin/issues",
  "keywords": [
    "eslint-plugin"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "pnpm run dev && eslint .",
    "lint:fix": "pnpm run dev && eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "devDependencies": {
    "@antfu/ni": "^28.2.0",
    "@antfu/utils": "^9.3.0",
    "@kirklin/eslint-config": "^6.1.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^25.0.10",
    "@typescript-eslint/typescript-estree": "^8.53.1",
    "@typescript-eslint/utils": "^8.53.1",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "eslint-vitest-rule-tester": "^3.0.1",
    "jsonc-eslint-parser": "^2.4.2",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "resolutions": {
    "eslint-plugin-kirklin": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
